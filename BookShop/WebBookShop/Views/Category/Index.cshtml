@model IEnumerable<Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-9">
            <h3 class="text-primary">Category List</h3>
        </div>
        <div class="col-3 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New List
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Order</th>
                <th>Created On</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>@item.CreatedDateTime</td>
                    <td>
                        <div class="w-100 btn-group "role="group">
                        <a asp-route-id="@item.Id" asp-action="Edit" class="btn btn-info">
                            <i class="fas fa-pen-to-square"></i>&nbsp; Edit
                        </a>
                        &nbsp; 
                        <a asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i>&nbsp; Delete
                        </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>